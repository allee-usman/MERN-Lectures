<%- include('partials/header') %> <% posts.forEach(post => { %>
<div class="post-card col-12 px-4 py-3">
	<div class="header">
		<h5 class="username fw-semibold fs-5"><%= post.username %></h5>
	</div>
	<div class="body">
		<p class="fs-5"><%= post.postBody %></p>
	</div>
	<div class="footer d-flex flex-column row-gap-3">
		<div>
			<a class="btn btn-primary me-2" href="/posts/<%= post.postID  %>">
				View Post
			</a>
			<a class="btn btn-warning" href="/posts/edit/<%= post.postID  %>">
				Edit
			</a>
		</div>
		<div>
			<form
				action="/posts/delete/<%= post.postID %>?_method=DELETE"
				method="post"
			>
				<button style="width: 14%" class="btn btn-danger">Delete</button>
			</form>
		</div>
	</div>
</div>

<% }); %>
<a href="/posts/new" class="new-post"
	>New Post &nbsp;<i class="bi bi-pencil-square"></i
></a>
<%- include('partials/footer') %>
